<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHomePage">

  <Button
      android:id="@+id/logout_button"
      android:layout_width="wrap_content"
      android:layout_height="35dp"
      android:layout_marginStart="320dp"
      android:layout_marginTop="5dp"
      android:layout_marginRight="10dp"
      android:background="@color/colorGreen"
      android:text="@string/logout_button"
      android:textSize="12sp" />

  <TextView
      android:id="@+id/workout_textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="105dp"
      android:layout_marginTop="60dp"
      android:text="@string/adminPage_textview"
      android:textSize="24sp"
      android:textStyle="bold" />

  <EditText
      android:id="@+id/editHeightText"
      android:layout_width="335dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="100px"
      android:layout_marginTop="250px"
      android:hint="Search Username"
      android:ems="10"
      android:inputType="number" />

  <Button
      android:id="@+id/search_button"
      android:layout_width="135dp"
      android:layout_height="36dp"
      android:layout_marginLeft="40dp"
      android:layout_marginTop="160dp"
      android:background="@color/colorGreen"
      android:text="@string/searchButton_textview"
      android:textSize="12sp" />


  <Button
      android:id="@+id/reset_button"
      android:layout_width="135dp"
      android:layout_height="36dp"
      android:layout_marginLeft="210dp"
      android:layout_marginTop="160dp"
      android:background="@color/colorGreen"
      android:text="@string/resetButton_textview"
      android:textSize="12sp" />

<ScrollView

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginTop="260dp"
    android:fillViewport="true"

    >
  <ListView
      android:id="@+id/workout_user_list"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      >
  </ListView>>
</ScrollView>

  </RelativeLayout>