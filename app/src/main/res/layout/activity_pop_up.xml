<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDFFE6"
        tools:context=".PopUpActivity">

        <TextView
            android:id="@+id/exerciseTitleTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#00A5E857"
            android:text="HEADING"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="76dp" />

        <TextView
            android:id="@+id/exerciseName_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:text="Name: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/exerciseReps_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:text="No of Reps: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hyperlink_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="110dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="Hyperlink:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/exerciseName2_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hyperlink_Textview"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="Name: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/exerciseReps2_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/exerciseName2_Textview"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="No of Reps: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hyperlink2_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/exerciseReps2_Textview"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="Hyperlink:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/exerciseName3_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hyperlink2_Textview"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="Name: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/exerciseReps3_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/exerciseName3_Textview"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="No of Reps: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hyperlink3_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/exerciseReps3_Textview"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="Hyperlink:"
            android:textSize="18sp" />
    </RelativeLayout>
</ScrollView>